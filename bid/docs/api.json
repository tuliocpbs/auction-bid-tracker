    "BidDeleted": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "example": "ok"
        },
        "msg": {
          "type": "string",
          "example": "bid deleted"
        }
      }
    },
    "BidsFound": {
      "type": "object",
      "properties": {
